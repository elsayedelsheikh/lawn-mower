<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- ============= Materials & Intertias =============  -->
  <xacro:include filename="$(find fws_description)/urdf/inertial_macros.xacro"/>
  <xacro:include filename="$(find fws_description)/urdf/materials.xacro"/>

  <!-- =============== Links & Joints =============== -->
  <!-- Base  footprint-->
  <link name="base_footprint"/>

  <!-- Base Link -->
  <joint name="base_link_joint" type="fixed">
    <origin xyz="0 0 0.2"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <link name="base_link"/>

  <!-- Chassis Link  -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0.0 0.0 0.157" rpy="0.0 0.0 0.0"/>
  </joint>
  
  <link name="chassis">
    <visual>
      <origin xyz="0.46 -0.41 -0.20" rpy="0 0 ${pi/2}"/>
      <geometry>
        <!-- <box size="0.90 0.72 0.15"/> -->
        <mesh filename="package://fws_description/meshes/base_link.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.90 0.72 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="1.0" x="0.90" y="0.72" z="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Front Right Steering Link -->
  <joint name="fr_steering_joint" type="revolute">
    <origin xyz="0.315 -0.32 0.0"/>
    <parent link="base_link"/>
    <child link="fr_steering_link"/>
    <limit effort="5" lower="-2.1" upper="2.1" velocity="6.28"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="fr_steering_link">
    <visual>      
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.07 0.07 0.15"/>
        <!-- <mesh filename="package://fws_description/meshes/steering_link.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.07 0.07 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.05" x="0.07" y="0.07" z="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Front Left Steering Link -->
  <joint name="fl_steering_joint" type="revolute">
    <origin xyz="0.315 0.32 0.0"/>
    <parent link="base_link"/>
    <child link="fl_steering_link"/>
    <limit effort="5" lower="-2.1" upper="2.1" velocity="6.28"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="fl_steering_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.07 0.07 0.15"/>
        <!-- <mesh filename="package://fws_description/meshes/steering_link.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.07 0.07 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.05" x="0.07" y="0.07" z="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>

  </link>

  <!-- Rear Right Steering Link -->
  <joint name="rr_steering_joint" type="revolute">
    <origin xyz="-0.315 -0.32 0.0"/>
    <parent link="base_link"/>
    <child link="rr_steering_link"/>
    <limit effort="5" lower="-2.1" upper="2.1" velocity="6.28"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="rr_steering_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.07 0.07 0.15"/>
        <!-- <mesh filename="package://fws_description/meshes/steering_link.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.07 0.07 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.05" x="0.07" y="0.07" z="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>

  </link>

  <!-- Rear Left Steering Link -->
  <joint name="rl_steering_joint" type="revolute">
    <origin xyz="-0.315 0.32 0.0"/>
    <parent link="base_link"/>
    <child link="rl_steering_link"/>
    <limit effort="5" lower="-2.1" upper="2.1" velocity="6.28"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="rl_steering_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.07 0.07 0.15"/>
        <!-- <mesh filename="package://fws_description/meshes/steering_link.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.07 0.07 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.05" x="0.07" y="0.07" z="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>

  </link>

  <!-- Front Right Wheel Link -->
  <joint name="fr_wheel_joint" type="continuous">
    <origin xyz="0 -0.08 -0.07" rpy="${pi/2} 0 0"/>
    <parent link="fr_steering_link"/>
    <child link="fr_wheel_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="fr_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
        <!-- <mesh filename="package://fws_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.08" radius="0.13">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Front Left Wheel Link -->
  <joint name="fl_wheel_joint" type="continuous">
    <origin xyz="0 0.08 -0.07" rpy="-${pi/2} 0 0"/>
    <parent link="fl_steering_link"/>
    <child link="fl_wheel_link"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="fl_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
       <!-- <mesh filename="package://fws_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.08" radius="0.13">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <!-- Rear Right Wheel Link -->
  <joint name="rr_wheel_joint" type="continuous">
    <origin xyz="0 -0.08 -0.07" rpy="${pi/2} 0 0"/>
    <parent link="rr_steering_link"/>
    <child link="rr_wheel_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="rr_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
        <!-- <mesh filename="package://fws_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.08" radius="0.13">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rear Left Wheel Link -->
  <joint name="rl_wheel_joint" type="continuous">
    <origin xyz="0 0.08 -0.07" rpy="-${pi/2} 0 0"/>
    <parent link="rl_steering_link"/>
    <child link="rl_wheel_link"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="rl_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
        <!-- <mesh filename="package://fws_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.13" length="0.08"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.08" radius="0.13">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

</robot>

